{
  "name": "todoer",
  "displayName": "todoer",
  "description": "Personal task manager",
  "version": "0.0.1",
  "icon": "media/icon.png",
  "publisher": "arthurwerle",
  "pricing": "Free",
  "engines": {
      "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onView:taskManager"],
  "main": "./out/extension.js",
  "contributes": {
      "viewsContainers": {
          "activitybar": [{
              "id": "task-manager",
              "title": "todoer",
              "icon": "media/checklist.svg"
          }]
      },
      "views": {
          "task-manager": [{
              "id": "taskManager",
              "name": "tasks"
          }]
      },
      "commands": [
          {
              "command": "taskManager.addTask",
              "title": "add new",
              "icon": "$(add)"
          },
          {
              "command": "taskManager.toggleTask",
              "title": "toggle task completion"
          },
          {
              "command": "taskManager.deleteTask",
              "title": "delete task",
              "icon": "$(trash)"
          }
      ],
      "menus": {
          "view/title": [{
              "command": "taskManager.addTask",
              "when": "view == taskManager",
              "group": "navigation"
          }],
          "view/item/context": [
              {
                  "command": "taskManager.deleteTask",
                  "when": "view == taskManager",
                  "group": "inline"
              }
          ]
      }
  },
  "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./",
      "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "typescript": "^5.3.3",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.13",
    "@vscode/test-electron": "^2.3.8",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "sinon": "^15.0.1"
  }
}